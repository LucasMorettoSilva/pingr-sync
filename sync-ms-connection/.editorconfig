# @w3tec
# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[{*.yml, *.yaml}]
indent_size = 2
tab_width = 2
